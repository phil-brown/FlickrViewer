<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/side_margin">

    <ImageView
        android:id="@+id/comment_user_icon"
        android:layout_width="@dimen/comment_icon_size"
        android:layout_height="@dimen/comment_icon_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:id="@+id/comment_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/comment_user_icon"
        android:orientation="vertical"
        android:padding="@dimen/side_margin">

        <TextView
            android:id="@+id/comment_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="username" />

        <TextView
            android:id="@+id/comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="content of comments"
            android:textAppearance="?android:textAppearanceMedium" />
    </LinearLayout>

</RelativeLayout>